DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$an = random(2,7,1);
$as = random(-1,1,2);
$a  = $an * $as;

$bn = random(2,8,1);
$bs = random(-1,1,2);
$b  = $bn * $bs;

$cn = random(2,7,1);
$cs = random(-1,1,2);
$c  = $cn * $cs;

$funct1 = "$a - $c/x^2";

TEXT(EV2(<<EOT));
If \( f(x) =  \frac {$a x^5 + $b x^4 + $c x^3} {x^4}\), find \( f'( x ) \).
$BR $BR \{ans_rule(30) \}
$BR
EOT

$ans = $funct1;
ANS(fun_cmp($ans));

TEXT(EV2(<<EOT));
$BR $BR

EOT

ENDDOCUMENT();        # This should be the last executable line in the problem.
