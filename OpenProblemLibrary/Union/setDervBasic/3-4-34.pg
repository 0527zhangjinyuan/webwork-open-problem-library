DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",            # Union College utilities
  "MathObjects.pl",
  "alignedChoice.pl",      # for aligned questions and answers
  "PGcourse.pl",           # Customization file for the course
);

TEXT(beginproblem());

###################################
# Setup

$a = random(2, 6, 0.2);
$b = random(2.1,7,0.2);
$c = random(2,7,1);

$point1 = random(3,9,1);
$point2 = random(-12,-2,1);

$f=Formula("$a x^2 + $b x - $c");

###################################
# Setting up an aligned list of the problems

#Answers

$fprime=$f->D('x');
$ans1=Real($fprime->eval(x=>$point1));
$ans2=Real($fprime->eval(x=>$point2));

$al = new_aligned_list(ans_rule_len=>15, numbered=>1, tex_spacing=>"3pt");
$al->qa(
  "\(f'($point1)\)", $ans1->cmp,
  "\(f'($point2)\)", $ans2->cmp,
);

###################################
# Main text

Context()->texStrings;
BEGIN_TEXT
Let \( f(x)= $f\).  Evaluate each of the following:
$PAR
\{$al->print_q\}
END_TEXT
Context()->normalStrings;

###################################
# Answer checking

$showPartialCorrectAnswers = 1;
ANS($al->correct_ans);

###################################

COMMENT('MathObject version');
ENDDOCUMENT();
