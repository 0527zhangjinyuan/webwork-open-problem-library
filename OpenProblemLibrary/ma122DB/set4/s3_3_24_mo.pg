DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",   							# Now we can use math objects!
"PGcourse.pl"
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;

$a = random(3,5,1);
$b = random(20,35,1);
$c = random(100,200,50);
$x = random(2,4,1);

Context()->variables->add(t=>'Real');
$f = Formula("$a*(t^2)+ $b*t + $c");

Context()->flags->set(reduceConstants=>0);
Context()->flags->set(reduceConstantFunctions=>0);
$dfx = Compute($f->D->substitute(t=>"$x"));

########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT
The population of a slowly growing bacterial colony after \( t \) hours
is given by \( p(t) = $f \).  Find the growth rate after \( $x \) hours. $BR$BR
Answer:\{ans_rule(20) \}
END_TEXT
Context()->normalStrings;

########################################
# Answers

ANS($dfx->cmp);

########################################


COMMENT('MathObject version');

COMMENT('MathObject version');
ENDDOCUMENT();
