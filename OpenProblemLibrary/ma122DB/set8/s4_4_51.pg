);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,8,1);
$b= random(1, 20, 1);

BEGIN_TEXT
Evaluate the limit
\[ \lim_{ x \rightarrow \infty }  \sqrt{ x^2 + ${a}x + $b}  - x     \]
$BR \{ans_rule(25) \}
$BR
END_TEXT

$ans = $a/2;
ANS(num_cmp($ans));

