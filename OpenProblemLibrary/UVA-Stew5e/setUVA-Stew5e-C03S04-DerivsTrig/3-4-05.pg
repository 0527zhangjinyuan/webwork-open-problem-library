TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);

TEXT(EV2(<<EOT));
Differentiate
\[ f(x) =  x^{$a} \cos x . \]
$BR
\(f'(x) = \) \{ans_rule(35) \}
$BR
EOT

$ans = "$a*x^{$a-1}*cos(x) - x^{$a}*sin(x)";
ANS(fun_cmp($ans));

