DOCUMENT();      

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGgraphmacros.pl",
"PGmatrixmacros.pl", 
"PGnumericalmacros.pl",
"PGauxiliaryFunctions.pl"
);

COMMENT('');

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

@c = NchooseK(6,6);
foreach $i (0..5) { 
	$c[$i] = $c[$i]+2;
}

@lu = ("lower", "upper");
$tag = random(0,1,1);
$lut = $lu[$tag];

@q = ("\( {\mathbb R}^{$c[0] \times $c[1]} \)", 
      "The space \({P_$c[2] [x]\) of polynomials with degree less than \($c[2] \).", 
      "The space of all diagonal \($c[3] \times $c[3]\) matrices", 	
      "The space of all $lut triangular \($c[4] \times $c[4]\) matrices",
      "The vector space \( {\mathbb C}^{\,$c[5]} \), vectors with complex entries, over the real numbers");

@a = ($c[0]*$c[1], 
      $c[2],
      $c[3],  
      $c[4]*($c[4]+1)/2, 
      2*$c[5]);

@slice = NchooseK(5,5);

@sq = @q[@slice];
@sa = @a[@slice];

BEGIN_TEXT

Find the dimensions of the following vector spaces. 
$BR
(a) $sq[0] \{ans_rule(5)\}
$BR
(b) $sq[1] \{ans_rule(5)\}
$BR
(c) $sq[2] \{ans_rule(5)\}

END_TEXT

ANS(num_cmp($sa[0]));
ANS(num_cmp($sa[1]));
ANS(num_cmp($sa[2]));


ENDDOCUMENT(); 

