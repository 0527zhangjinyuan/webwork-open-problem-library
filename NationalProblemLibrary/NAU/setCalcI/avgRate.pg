DOCUMENT();
loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

Context("Numeric");

$a = random(-5,-1,1);
$b = random(1,5,1);
$ans = ($b*$b+2*$b-$a*$a-2*$a)/($b-$a);
$answer = Compute($ans);


TEXT(beginproblem());

Context()->texStrings;
BEGIN_TEXT

What is the average rate of of change of the function \( x\mapsto x^2+2x \) between $a and $b?
$BR
\{ ans_rule(35) \}

END_TEXT

Context()->normalStrings;

ANS( $answer->cmp() );

ENDDOCUMENT();
